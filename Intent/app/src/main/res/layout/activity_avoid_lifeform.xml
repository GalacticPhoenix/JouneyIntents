<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/planet_wstars"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".AvoidLifeformActivity">

    <TextView
        android:id="@+id/textView_avoid_lifeform_story"
        style="@style/CustomText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:text="You steer clear of the life form, not wanting to risk a confrontation. Your journey continues, but you are no better off than before." />

    <Button
        android:id="@+id/button_travel_to_wormhole"
        style="@style/CustomButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Travel to Wormhole" />

</LinearLayout>