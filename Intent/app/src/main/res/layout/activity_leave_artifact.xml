<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/planet_wstars"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".LeaveArtifactActivity">

    <TextView
        android:id="@+id/textView_leave_artifact_story"
        style="@style/CustomText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:text="You decide to leave the artifact. It's too risky to bring something unknown onto your ship. You proceed to the next system." />

    <Button
        android:id="@+id/button_continue_mission"
        style="@style/CustomButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue Mission" />

</LinearLayout>