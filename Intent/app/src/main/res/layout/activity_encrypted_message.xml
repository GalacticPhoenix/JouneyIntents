<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/red_nebula"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".EncryptedMessageActivity">

    <TextView
        android:id="@+id/textView_encrypted_message_story"
        style="@style/CustomText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:text="You successfully decrypt the message. It contains the coordinates to a habitable planet!" />

    <Button
        android:id="@+id/button_go_to_habitable_planet"
        style="@style/CustomButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Habitable Planet" />

</LinearLayout>