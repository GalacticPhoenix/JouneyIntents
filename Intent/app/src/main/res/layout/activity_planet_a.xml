<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/emptyspace_wplanet"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".PlanetAActivity">

    <TextView
        android:id="@+id/textView_planet_a_story"
        style="@style/CustomText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:text="You've arrived at the first planet. It's a desert world with strange rock formations." />

    <Button
        android:id="@+id/button_explore_planet_a"
        style="@style/CustomButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explore the surface" />

    <Button
        android:id="@+id/button_scan_planet_a"
        style="@style/CustomButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Scan from orbit" />

</LinearLayout>